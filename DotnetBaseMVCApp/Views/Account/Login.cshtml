@using DotnetBaseMVCApp.ViewModels
@model LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<div class="account-login-page">
    <form asp-action="Login" >
        <div class="form-group mb-3">
            <label class="form-label">Email</label>
            <input type="email" class="form-control" placeholder="Please enter an email" asp-for="email" />
        </div>

        <div class="form-group mb-3">
            <label class="form-label">Password</label>
            <input type="password" class="form-control" placeholder="Please enter password" asp-for="password" />
        </div>

        <div class="form-group mb-3">
            <button class="btn btn-primary" type="submit" value="Log in">Login</button>
        </div>
    </form>
</div>
